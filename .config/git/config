[user]
	name = Kutsan Kaplan
	email = me@kutsankaplan.com
	signingkey = 439AC30C

[core]
	editor = $EDITOR
	excludesfile = ~/.config/git/gitignoreglobal
	whitespace = warn

[alias]
	a = add
	ap = add --patch
	b = branch
	bl = !git --no-pager branch --verbose --all
	c = commit
	co = checkout
	count = !git log --oneline | wc -l
	d = diff
	ds = diff --staged
	dt = difftool
	l = log \
		--graph \
		--abbrev-commit \
		--decorate \
		--all \
		--date=format:'%Y-%m-%d %H:%M' \
		--format=format:'%C(bold black)%ad%C(reset) %C(yellow)%h%C(reset) %C(white)%s%C(reset) %C(blue)<%an>%C(reset)%C(bold yellow)%d%C(reset) %C(black)%ar%C(reset)'
	lp = log --patch
	pr = "! \
		function f() { \
			git fetch --force --update-head-ok ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; \
		}; f"
	pr-clean = "! \
		git for-each-ref refs/heads/pr/* --format='%(refname)' \
		| sed s#refs/heads/## \
		| xargs -I '{}' git branch --delete --force {}"
	s = status --short --branch
	sm = submodule
	today = log \
		--since=midnight \
		--oneline \
		--graph \
		--decorate
	yesterday = log \
		--after=yesterday.midnight \
		--before 0am \
		--oneline \
		--graph \
		--decorate

[pull]
	rebase = true

[diff]
	tool = vimdiff

[merge]
	tool = vimdiff

[commit]
	gpgsign = true
	verbose = true

[grep]
	lineNumber = true
	patternType = perl

[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = blue
	untracked = red

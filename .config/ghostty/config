# Font families
font-family = "MonoLisa Variable"
font-family-bold = "MonoLisa Variable"
font-family-italic = "MonoLisa Variable"
font-family-bold-italic = "MonoLisa Variable"
window-title-font-family = "MonoLisa Variable"

# Font size in points
font-size = 17

# Font features
font-feature = "zero"
font-feature = "ss04"
font-feature = "ss08"
font-feature = "ss11"
font-feature = "ss17"

# Modify font characteristics
adjust-underline-position = 6
adjust-cell-height = "20%"
adjust-cursor-thickness = 5
cursor-style-blink = false
window-padding-x = 0
window-padding-y = 0
window-padding-balance = true

# Colors
theme = catppuccin
window-colorspace = display-p3
window-padding-color = extend-always

# Integration
shell-integration-features = no-cursor,sudo,no-title
mouse-hide-while-typing = true
macos-option-as-alt = left
window-width = 120
window-height = 30
fullscreen = true

# Keybindings
keybind = performable:super+c=copy_to_clipboard
keybind = super+z=toggle_split_zoom
keybind = super+enter=new_split:down
keybind = super+shift+enter=new_split:right
keybind = super+n=next_tab
keybind = super+p=previous_tab
keybind = super+h=goto_split:left
keybind = super+j=goto_split:bottom
keybind = super+k=goto_split:top
keybind = super+l=goto_split:right
keybind = super+shift+k=jump_to_prompt:-1
keybind = super+shift+j=jump_to_prompt:1

# Disable default keybindings
keybind = super+d=ignore
keybind = super+shift+d=ignore
keybind = super+shift+down=ignore
keybind = super+down=ignore
keybind = super+alt+shift+j=ignore

# Quick terminal
quick-terminal-animation-duration = 0
keybind = global:super+shift+\=toggle_quick_terminal
